<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_rect_corner_bg_white"
    android:maxWidth="@dimen/dimen_600dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_5dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_15dp">

    <TextView
        android:id="@+id/common_dialog_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/font_gotham_book"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/common_dialog_tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_dialog_tvTitle"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:fontFamily="@font/font_gotham_book"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_13sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_dialog_tvMsg"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_dialog_btnNegative"
            style="@style/Text.DialogAction"
            android:text="@string/cancel"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/common_dialog_btnPositive"
            style="@style/Text.DialogAction"
            android:text="@string/submit"/>
    </LinearLayout>
</RelativeLayout>