<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.StatusBarTransparent">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="StyleCommonDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--Common styles @Start-->
    <style name="StyleText" parent="TextAppearance.AppCompat">
    </style>

    <style name="StyleEditText" parent="Base.Widget.AppCompat.EditText">
    </style>

    <style name="StyleButton" parent="Widget.AppCompat.Button">
    </style>
    <!--Common styles @End-->

    <style name="StyleImageButton.Header" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
    </style>

    <style name="StyleEditText.HeaderSearch" parent="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:background">@drawable/drawable_bg_white_corner</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:drawableStart">@drawable/ic_nav_search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="StyleBannerImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_200dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="StyleTabPageIndicator" parent="Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/dimen_1dp</item>
        <!--<item name="tabPaddingEnd">3dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_30dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="StyleDialogCommon" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="StyleText.DialogAction" parent="StyleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="StyleTvDialogAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>
