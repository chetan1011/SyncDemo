<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StyleStatusBarTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ibHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
    </style>

    <style name="tvHeaderSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:background">@drawable/bg_white_corner</item>
        <item name="android:drawablePadding">@dimen/dimen_10</item>
        <item name="android:drawableStart">@drawable/ic_nav_search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="vpBannerImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_200</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="tlPageIndicator">
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/dimen_1</item>
        <!--<item name="tabPaddingEnd">3dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
